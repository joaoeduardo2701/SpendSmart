@{
	ViewData["Title"] = "Expenses";
}

@model List<Expense>

<h1 class="display-4">Expenses</h1>
<div class="text-center">
	<h3 class="mt-5">Total Expenses $@ViewBag.Expenses</h3>
	<table class="table mt-3">
		<thead>
			<tr>
				<th>Id</th>
				<th>Value</th>
				<th>Description</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
		@foreach (var expense in Model)
		{
			<tr>
				<td>@expense.Id</td>
				<td>@expense.Value</td>
				<td>@expense.Description</td>
				<td>
					<a asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a>
					<a asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
				</td>
			</tr>
		}
		</tbody>
	</table>
	<a class="btn btn-primary mt-4" asp-action="CreateEditExpense">Create new</a>
</div>
